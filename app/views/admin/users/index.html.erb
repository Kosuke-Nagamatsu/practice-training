<div class="row">
  <div class="col-md-8 offset-md-2">
    <h2><%= t('view.administrator_user_list') %></h2>
  </div>
</div>
<div class="btn-new">
  <%= link_to t('view.new'), new_admin_user_path, class: 'btn btn-primary' %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th><%= t('view.name') %></th>
      <th><%= t('view.email') %></th>
      <th><%= t('view.task_number') %></th>
      <th><%= t('view.admin') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index(1) do |user, number| %>
      <tr id="user_row">
        <td><%= number %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin %></td>
        <td><%= link_to t('view.detail'), admin_user_path(user.id), class: 'btn btn-info btn-sm btn-info-customize' %></td>
        <td><%= link_to t('view.edit'), edit_admin_user_path(user.id), class: 'btn btn-success btn-sm btn-success-customize' %></td>
        <td><%= link_to link_to t('view.delete'), admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger btn-sm btn-danger-customize' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
