<h1><%= t('view.task_list') %></h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('view.task') %></th>
    <th><%= t('view.content') %></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to t('view.detail'), task_path(task.id) %></td>
    <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
    <td><%= link_to link_to t('view.delete'), task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to t('view.new'), new_task_path %>
